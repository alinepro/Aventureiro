#include <stdio.h>

int main(){
    float nota1, nota2, nota3, media;
    int resultado;

    printf("Digite a nota 1: ");
    scanf("%f", &nota1);

    printf("Digite a nota 2: ");
    scanf("%f", &nota2);

    printf("Digite a nota 3: ");
    scanf("%f", &nota3);

    float soma = nota1 + nota2 + nota3;
    media = soma / 3;

    printf("A média é: %.2f\n", media);

    resultado = media;
    resultado += 3;
    printf("O resultado será: %d\n", resultado);

    return 0;
}#include <stdio.h>

int main(){
    float nota1, nota2, nota3, media;
    int resultado;

    printf("Digite a nota 1: ");
    scanf("%f", &nota1);

    printf("Digite a nota 2: ");
    scanf("%f", &nota2);

    printf("Digite a nota 3: ");
    scanf("%f", &nota3);

    float soma = nota1 + nota2 + nota3;
    media = soma / 3;

    printf("A média é: %.2f\n", media);

    resultado = media;
    resultado += 3;
    printf("O resultado será: %d\n", resultado);

    return 0;
}
